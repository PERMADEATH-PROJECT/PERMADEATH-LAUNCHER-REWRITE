{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "permadeath-launcher",
  "version": "0.1.0",
  "identifier": "com.victorgponce.permadeath-launcher",
  "build": {
    "beforeDevCommand": "pnpm start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist/permadeath-launcher-rewrite/browser"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Permadeath Launcher",
        "width": 1080,
        "height": 720,
        "resizable": false,
        "fullscreen": true,
        "maximized": true,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
